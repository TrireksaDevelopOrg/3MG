<Window x:Class="MainApp.Views.SearchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Style="{StaticResource WindowKey }"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp.Views" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="SearchView" Height="183.588" Width="370.509">
    <Grid Margin="10">
        <Border Padding="10" Style="{StaticResource BorderLayoutStyle}">
            <Grid>
                <StackPanel>
                    <Label Content="Cari"/>
                    <TextBox x:Name="searchBox" TextChanged="searchBox_TextChanged"/>
                </StackPanel>
                <Label Content="Tekan Esc Untuk Keluar" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="auto" Padding="0" FontSize="10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
