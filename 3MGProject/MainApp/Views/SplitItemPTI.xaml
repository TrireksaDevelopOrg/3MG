<Window x:Class="MainApp.Views.SplitItemPTI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp.Views"
        mc:Ignorable="d" Style="{StaticResource WindowKey}" WindowStartupLocation="CenterScreen"
        Title="SplitItemPTI" Height="200" Width="400">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Height"  Value="28"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label Content="Jumlah Yang Anda Butuhkan Untuk Di Split ?"/>
            <WrapPanel>
                <StackPanel>
                    <Label Content="Coli"/>
                    <TextBox  Text="{Binding Jumlah}" Width="95"></TextBox>
                </StackPanel>
                <StackPanel>
                    <Label Content="Total Berat"/>
                    <TextBox IsReadOnly="True" HorizontalAlignment="Right" Text="{Binding Total,StringFormat={}{0:N2}}" Width="108"></TextBox>
                </StackPanel>
             
                <StackPanel>
                    <Label Content="Biaya"/>
                    <TextBox IsReadOnly="True" HorizontalAlignment="Right" Text="{Binding Biaya,StringFormat={}{0:N2}}" Width="146"></TextBox>
                </StackPanel>
            </WrapPanel>

        </StackPanel>

        <StackPanel Grid.Row="1">
            <WrapPanel Margin="10" HorizontalAlignment="Right">
                <Button Command="{Binding SaveCommand}" Content="OK"/>
                <Button Command="{Binding CancelCommand}" Content="Batal"/>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>
